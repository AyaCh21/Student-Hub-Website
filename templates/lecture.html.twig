{% extends 'base.html.twig' %}

{% block title %}Study Materials{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/lecture.css') }}">
{% endblock %}

{% block content %}
    <h1>Study Materials</h1>

    {% for type, materials in typeWiseMaterials %}
        <h2>{{ type }}</h2>
        <ul>
            {% for material in materials %}
                <li>
                    <a href="{{ material.getFilePath() }}" target="_blank">
                        {{ material.getFilePath() }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endfor %}
{% endblock %}
