{% extends 'base.html.twig' %}

{% block title %}{{ type }} Materials{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/lecture.css') }}">
{% endblock %}

{% block content %}
    <h1>{{ type }} Materials</h1>

    <ul>
        {% for material in studyMaterials %}
            <li>{{ material.getFilePath() }}</li>
        {% endfor %}
    </ul>
{% endblock %}
