{% extends 'base.html.twig' %}

{% block content %}
    <div class="prof_cards_wrapper">
        {% for professor, courses in professorWiseCourses %}
            <div class="prof_card">
                <h2 class="prof_name">{{ professor }}</h2>
                <div class="prof_classes_wrapper">
                    {% for course in courses %}
                        <div class="prof_class">{{ course.name }}</div>
                    {% endfor %}
                </div>
                <div class="prof_rate">20</div>
                <a href="{{ path('professor_rate') }}"><input type="button" class="rate_button" value="rate me"></a>
                <input type="button" class="feedback_button" value="leave feedback">
            </div>
        {% endfor %}
    </div>
{% endblock %}